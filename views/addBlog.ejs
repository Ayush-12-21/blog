
<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Create New Blog</title>
    <style>
      :root {
        --primary-color: #4361ee;
        --primary-hover: #3a56d4;
        --text-color: #333;
        --light-bg: #f8f9fa;
        --border-color: #e1e5eb;
        --shadow: 0 4px 12px rgba(0, 0, 0, 0.08);
        --shadow-hover: 0 8px 24px rgba(0, 0, 0, 0.12);
      }
      
      body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.6;
        color: #333;
        padding-top: 76px; /* Account for fixed navbar */
      }
      
      .form-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1.5rem;
      }
      
      .form-card {
        background: white;
        border-radius: 16px;
        box-shadow: var(--shadow);
        padding: 2.5rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      
      .form-card:hover {
        box-shadow: var(--shadow-hover);
        transform: translateY(-5px);
      }
      
      .form-header {
        text-align: center;
        margin-bottom: 2.5rem;
      }
      
      .form-title {
        font-size: 2rem;
        font-weight: 700;
        color: #212529;
        margin-bottom: 0.5rem;
      }
      
      .form-subtitle {
        color: #6c757d;
        font-size: 1.1rem;
      }
      
      .form-group {
        margin-bottom: 2rem;
      }
      
      .form-label {
        display: block;
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: #495057;
        font-size: 1.1rem;
      }
      
      .form-control {
        width: 100%;
        padding: 1rem 1.25rem;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s;
        background-color: #f8f9fa;
      }
      
      .form-control:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.15);
        background-color: #fff;
      }
      
      textarea.form-control {
        min-height: 250px;
        resize: vertical;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.6;
      }
      
      .file-upload {
        position: relative;
        display: block;
      }
      
      .file-upload-input {
        position: absolute;
        left: -9999px;
      }
      
      .file-upload-label {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2.5rem;
        border: 2px dashed var(--border-color);
        border-radius: 8px;
        background-color: #f8f9fa;
        cursor: pointer;
        transition: all 0.3s;
        text-align: center;
      }
      
      .file-upload-label:hover {
        border-color: var(--primary-color);
        background-color: #f0f4ff;
      }
      
      .file-upload-icon {
        font-size: 2.5rem;
        color: #6c757d;
        margin-bottom: 1rem;
      }
      
      .file-upload-text {
        color: #495057;
        font-weight: 500;
      }
      /* bc dfd */
      .file-upload-hint {
        color: #6c757d;
        font-size: 0.9rem;
        margin-top: 0.5rem;
      }
      
      .file-preview {
        margin-top: 1.5rem;
        display: none;
        text-align: center;
      }
      
      .file-preview img {
        max-width: 100%;
        max-height: 200px;
        border-radius: 8px;
        box-shadow: var(--shadow);
      }
      
      .btn-submit {
        background: var(--primary-color);
        color: white;
        border: none;
        padding: 1rem 2.5rem;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        display: block;
        width: 100%;
        margin-top: 1.5rem;
      }
      
      .btn-submit:hover {
        background: var(--primary-hover);
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(67, 97, 238, 0.25);
      }
      
      .btn-submit:active {
        transform: translateY(0);
      }
      
      .character-count {
        text-align: right;
        font-size: 0.9rem;
        color: #6c757d;
        margin-top: 0.5rem;
      }
      
      /* Animation for form elements */
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
      }
      
      .form-group {
        animation: fadeIn 0.5s ease forwards;
      }
      
      .form-group:nth-child(1) { animation-delay: 0.1s; }
      .form-group:nth-child(2) { animation-delay: 0.2s; }
      .form-group:nth-child(3) { animation-delay: 0.3s; }
      .form-group:nth-child(4) { animation-delay: 0.4s; }
      
      /* Responsive adjustments */
      @media (max-width: 768px) {
        .form-card {
          padding: 2rem;
        }
        
        .form-title {
          font-size: 1.75rem;
        }
      }
      
      @media (max-width: 576px) {
        .form-container {
          padding: 0 1rem;
        }
        
        .form-card {
          padding: 1.5rem;
        }
        
        .form-title {
          font-size: 1.5rem;
        }
        
        .form-control {
          padding: 0.875rem 1rem;
        }
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="form-container">
      <div class="form-card">
        <div class="form-header">
          <h1 class="form-title">Create New Blog Post</h1>
          <p class="form-subtitle">Share your ideas and stories with the world</p>
        </div>
        
        <form action="/blog" method="post" enctype="multipart/form-data" id="blogForm">
          <div class="form-group">
            <label for="coverImage" class="form-label">Cover Image</label>
            <div class="file-upload">
              <input 
                type="file" 
                class="file-upload-input" 
                id="coverImage" 
                name="coverImage" 
                accept="image/*"
                onchange="previewImage(this)"
              />
              <label for="coverImage" class="file-upload-label">
                <div class="file-upload-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                    <path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z"/>
                  </svg>
                </div>
                <span class="file-upload-text">Click to upload a cover image</span>
                <span class="file-upload-hint">PNG, JPG, GIF up to 5MB</span>
              </label>
            </div>
            <div class="file-preview" id="imagePreview">
              <img src="" alt="Cover image preview" id="previewImg">
            </div>
          </div>
          
          <div class="form-group">
            <label for="title" class="form-label">Blog Title</label>
            <input
              type="text"
              class="form-control"
              id="title"
              name="title"
              placeholder="Enter a captivating title for your blog"
              required
              oninput="updateCharacterCount('title', 'titleCount', 100)"
            />
            <div class="character-count">
              <span id="titleCount">0</span>/100 characters
            </div>
          </div>
          
          <div class="form-group">
            <label for="body" class="form-label">Blog Content</label>
            <textarea 
              name="body" 
              class="form-control" 
              id="body" 
              placeholder="Write your blog content here..."
              required
              oninput="updateCharacterCount('body', 'bodyCount', 5000)"
            ></textarea>
            <div class="character-count">
              <span id="bodyCount">0</span>/5000 characters
            </div>
          </div>
          
          <button type="submit" class="btn-submit">Publish Blog</button>
        </form>
      </div>
    </div>

    <%- include('./partials/scripts') %>
    
    <script>
      function previewImage(input) {
        const preview = document.getElementById('imagePreview');
        const previewImg = document.getElementById('previewImg');
        
        if (input.files && input.files[0]) {
          const reader = new FileReader();
          
          reader.onload = function(e) {
            previewImg.src = e.target.result;
            preview.style.display = 'block';
          }
          
          reader.readAsDataURL(input.files[0]);
        } else {
          preview.style.display = 'none';
        }
      }
      
      function updateCharacterCount(fieldId, countId, maxLength) {
        const field = document.getElementById(fieldId);
        const countElement = document.getElementById(countId);
        const currentLength = field.value.length;
        
        countElement.textContent = currentLength;
        
        if (currentLength > maxLength) {
          countElement.style.color = '#dc3545';
        } else {
          countElement.style.color = '#6c757d';
        }
      }
      
      // Initialize character counts on page load
      document.addEventListener('DOMContentLoaded', function() {
        updateCharacterCount('title', 'titleCount', 100);
        updateCharacterCount('body', 'bodyCount', 5000);
      });
    </script>
  </body>
</html>